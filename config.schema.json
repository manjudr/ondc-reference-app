{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Reference Network Participant Configuration",
    "description": "Configuration for the ONDC Reference Application, defining the client UI, themes, network identity, and views.",
    "type": "array",
    "items": {
        "type": "object",
        "required": [
            "endpoint",
            "app",
            "theme",
            "layout",
            "network",
            "schemas",
            "views"
        ],
        "properties": {
            "endpoint": {
                "type": "string",
                "description": "The URL path prefix where this configuration should be active (e.g., '/retail' or '/evcharging')."
            },
            "app": {
                "type": "object",
                "description": "Global application metadata used for browser tabs and bookkeeping.",
                "properties": {
                    "title": {
                        "type": "string",
                        "description": "The title displayed in the browser tab and bookmarks."
                    },
                    "logo": {
                        "type": "string",
                        "description": "Path to the application logo used in metadata."
                    },
                    "favicon": {
                        "type": "string",
                        "description": "Path to the favicon shown in the browser tab."
                    }
                },
                "required": [
                    "title"
                ]
            },
            "theme": {
                "type": "object",
                "description": "Visual theme settings for the application.",
                "properties": {
                    "mode": {
                        "type": "string",
                        "enum": [
                            "light",
                            "dark"
                        ],
                        "description": "The color scheme mode."
                    },
                    "palette": {
                        "type": "object",
                        "description": "Color palette definitions.",
                        "properties": {
                            "primary": {
                                "type": "object",
                                "properties": {
                                    "main": {
                                        "type": "string"
                                    },
                                    "light": {
                                        "type": "string"
                                    },
                                    "dark": {
                                        "type": "string"
                                    },
                                    "contrastText": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "main"
                                ]
                            },
                            "background": {
                                "type": "object",
                                "properties": {
                                    "default": {
                                        "type": "string"
                                    },
                                    "paper": {
                                        "type": "string"
                                    },
                                    "surface": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "default"
                                ]
                            },
                            "text": {
                                "type": "object",
                                "properties": {
                                    "primary": {
                                        "type": "string"
                                    },
                                    "secondary": {
                                        "type": "string"
                                    },
                                    "disabled": {
                                        "type": "string"
                                    }
                                }
                            },
                            "action": {
                                "type": "object",
                                "properties": {
                                    "active": {
                                        "type": "string"
                                    },
                                    "hover": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    },
                    "typography": {
                        "type": "object",
                        "description": "Typography settings.",
                        "properties": {
                            "fontFamily": {
                                "type": "string"
                            }
                        }
                    },
                    "shape": {
                        "type": "object",
                        "properties": {
                            "borderRadius": {
                                "type": "number",
                                "description": "Border radius for standard cards and containers."
                            },
                            "searchBarRadius": {
                                "type": "number",
                                "description": "Border radius specifically for search bars and top-level inputs."
                            },
                            "buttonRadius": {
                                "type": "number",
                                "description": "Border radius specifically for primary and secondary buttons."
                            }
                        }
                    },
                    "gradients": {
                        "type": "object",
                        "description": "Custom gradient definitions.",
                        "additionalProperties": {
                            "type": "string"
                        }
                    },
                    "shadows": {
                        "type": "object",
                        "description": "Custom shadow definitions.",
                        "additionalProperties": {
                            "type": "string"
                        }
                    },
                    "icons": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "mode",
                    "palette",
                    "typography"
                ]
            },
            "layout": {
                "type": "object",
                "description": "Layout configurations for the Header and Sidebar components.",
                "properties": {
                    "header": {
                        "type": "object",
                        "description": "Configuration for the top navigation header.",
                        "properties": {
                            "title": {
                                "type": "string",
                                "description": "The main visual title displayed in the header."
                            },
                            "subtitle": {
                                "type": "string",
                                "description": "Subtitle text displayed below the title in the header."
                            },
                            "logo": {
                                "type": "string",
                                "description": "Path to the logo image displayed in the header."
                            },
                            "background": {
                                "type": "string",
                                "description": "CSS background property (e.g., linear-gradient) for the header."
                            },
                            "color": {
                                "type": "string",
                                "title": "Color",
                                "pattern": "^(#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})|rgba?\\(.*\\))$",
                                "description": "CSS color for header text."
                            }
                        },
                        "required": [
                            "title",
                            "background",
                            "color"
                        ]
                    },
                    "sidebar": {
                        "type": "object",
                        "description": "Configuration for the side navigation menu.",
                        "properties": {
                            "background": {
                                "type": "string",
                                "description": "CSS background property (e.g., linear-gradient) for the sidebar."
                            },
                            "color": {
                                "type": "string",
                                "title": "Color",
                                "pattern": "^(#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})|rgba?\\(.*\\))$",
                                "description": "CSS color for sidebar text items."
                            },
                            "activeColor": {
                                "type": "string",
                                "title": "Color",
                                "pattern": "^(#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})|rgba?\\(.*\\))$",
                                "description": "CSS color for the currently active/selected sidebar item."
                            },
                            "items": {
                                "type": "array",
                                "description": "List of navigation items to display in the sidebar.",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "description": "Unique identifier for the sidebar item."
                                        },
                                        "title": {
                                            "type": "string",
                                            "description": "Display label for the sidebar item."
                                        },
                                        "icon": {
                                            "type": "string",
                                            "description": "Icon name (mapped to an icon set in the implementation)."
                                        },
                                        "routes": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            },
                                            "description": "List of View IDs that this sidebar item activates/links to."
                                        }
                                    },
                                    "required": [
                                        "id",
                                        "title"
                                    ]
                                }
                            }
                        },
                        "required": [
                            "background",
                            "color",
                            "items"
                        ]
                    }
                },
                "required": [
                    "header",
                    "sidebar"
                ]
            },
            "network": {
                "type": "object",
                "description": "Network protocol configuration.",
                "properties": {
                    "domain": {
                        "type": "string",
                        "description": "The Beckn/ONDC domain string (e.g., 'beckn.one:retail')."
                    }
                },
                "required": [
                    "domain"
                ]
            },
            "schemas": {
                "type": "object",
                "description": "Registry of protocol schema definitions used in this configuration.",
                "additionalProperties": {
                    "type": "object",
                    "properties": {
                        "label": {
                            "type": "string",
                            "description": "Human-readable name for the schema."
                        },
                        "contextUrl": {
                            "type": "string",
                            "pattern": "^https?://.+",
                            "description": "URL to the JSON-LD context for this schema."
                        },
                        "rendererUrl": {
                            "type": "string",
                            "pattern": "^https?://.+",
                            "description": "URL to the renderer configuration JSON."
                        }
                    },
                    "required": [
                        "label",
                        "contextUrl",
                        "rendererUrl"
                    ]
                }
            },
            "views": {
                "type": "object",
                "description": "Configuration for individual pages/views in the application.",
                "additionalProperties": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "search",
                                "form"
                            ],
                            "description": "The type of view template to render."
                        },
                        "title": {
                            "type": "string",
                            "description": "Title displayed on the view page."
                        },
                        "subtitle": {
                            "type": "string",
                            "description": "Subtitle displayed on the view page."
                        },
                        "api": {
                            "type": "string",
                            "description": "API endpoint path for this view's primary action."
                        },
                        "context": {
                            "type": "object",
                            "description": "Beckn context properties to include in API requests.",
                            "properties": {
                                "action": {
                                    "type": "string",
                                    "description": "The protocol action for this view (e.g., 'discover')."
                                }
                            }
                        },
                        "ui": {
                            "type": "object",
                            "description": "UI layout settings specific to this view.",
                            "properties": {
                                "layout": {
                                    "type": "string",
                                    "enum": [
                                        "grid",
                                        "list"
                                    ],
                                    "description": "How to display results (Grid or List)."
                                },
                                "background": {
                                    "type": "string",
                                    "description": "Background style for the results container."
                                }
                            }
                        },
                        "search": {
                            "type": "object",
                            "description": "Configuration for the search bar (only for 'search' type views).",
                            "properties": {
                                "placeholder": {
                                    "type": "string",
                                    "description": "Placeholder text for the search input."
                                },
                                "radius": {
                                    "type": "number",
                                    "description": "Default search radius in meters."
                                }
                            }
                        },
                        "filters": {
                            "type": "array",
                            "description": "List of filters available in the search view.",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string",
                                        "description": "Unique identifier for the filter."
                                    },
                                    "label": {
                                        "type": "string",
                                        "description": "Label displayed above the filter."
                                    },
                                    "type": {
                                        "type": "string",
                                        "enum": [
                                            "select",
                                            "text"
                                        ],
                                        "description": "The input type for the filter."
                                    },
                                    "uiType": {
                                        "type": "string",
                                        "enum": [
                                            "dropdown",
                                            "chips",
                                            "radio",
                                            "buttons"
                                        ],
                                        "description": "Visual style for rendering the filter options."
                                    },
                                    "options": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "label": {
                                                    "type": "string",
                                                    "description": "Display text for the option."
                                                },
                                                "value": {
                                                    "type": "string",
                                                    "description": "Value submitted when this option is selected."
                                                },
                                                "schema": {
                                                    "type": "string",
                                                    "description": "Key of the schema from the 'schemas' registry to use when this option is selected."
                                                },
                                                "defaultSearch": {
                                                    "type": "object",
                                                    "description": "Default search parameters to pre-fill when this option is selected.",
                                                    "properties": {
                                                        "text": {
                                                            "type": "string"
                                                        },
                                                        "location": {
                                                            "type": "string"
                                                        }
                                                    }
                                                }
                                            },
                                            "required": [
                                                "label",
                                                "value",
                                                "schema"
                                            ]
                                        }
                                    }
                                },
                                "required": [
                                    "id",
                                    "label",
                                    "type",
                                    "options"
                                ]
                            }
                        },
                        "labels": {
                            "type": "object",
                            "description": "Customizable UI labels for this view.",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "required": [
                        "type",
                        "title",
                        "api"
                    ]
                }
            }
        }
    }
}